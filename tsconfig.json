{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "noImplicitThis": false,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/es2015",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ]
}
